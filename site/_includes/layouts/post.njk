---
layout: layouts/base.njk
templateClass: tmpl-post
---

<style>
  {{"site/_includes/layouts/post.scss" | sass | safe}}
</style>
<article class="article">
  <header>
    <time datetime="{{date}}">{{date | date}}</time>
    <h1>{{title}}</h1>
    {% if thumbnail %}
      <img class="article__hero" async src="{{thumbnail | url}}">
    {% endif %}
  </header>
{{ content | safe }}
</article>