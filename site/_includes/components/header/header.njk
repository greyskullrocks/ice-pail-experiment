{% set menu_icon %}
{% include "site/_assets/icons/menu.svg" %}
{% endset %}

<style>
  {{"site/_includes/components/header/header.scss" | sass | safe}}
</style>

<header class="header flex container mx-auto items-center justify-between p-4">
  <h3>
    <a href="{{ '/' | url }}">{{ metadata.title }}</a>
  </h3>
  <nav id="header-nav">
    <ul class="hidden lg:flex items-center">
      <li><a href="{{ '/posts' | url }}">Blog</a></li>
      <li><a href="{{ '/about' | url }}">About</a></li>
    </ul>
    <span id="menu-button" class="lg:hidden relative z-10">
      {{menu_icon | safe}}
    </span>
  </nav>
</header>